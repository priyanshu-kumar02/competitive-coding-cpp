// O(V+E)   
//almost recursive DFS 
//children  include root
//assumption:connected graph ; apply to each vertex if disconnected



lli V,E,x,y,weight,this_child;
lli total_child[1000+5];lli visited[1000+5];

lli childs(vector <vector<lli> > &graph,lli root,lli visited[])
{
visited[root]=1;
lli children=1;

		for (unsigned lli i=0 ; i<graph[root].size() ; i++)
		{
			if ( !visited[graph[root][i]])
			{
				this_child=childs(graph,graph[root][i],visited);
				children+=this_child;
			}
		}
		
	total_child[root]=children;
	return children;
}
